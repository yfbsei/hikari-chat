# .env.example - Copy this to .env and fill in your values

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/hikari_chat"
# OR use individual database settings:
DB_HOST="localhost"
DB_PORT="5432"
DB_NAME="hikari_chat"
DB_USER="postgres"
DB_PASSWORD="password"

# Redis Configuration
REDIS_URL="redis://localhost:6379"
# OR use individual Redis settings:
REDIS_HOST="localhost"
REDIS_PORT="6379"
REDIS_PASSWORD=""

# JWT and Security
JWT_SECRET="your-super-secret-jwt-key-minimum-32-characters-long"
BCRYPT_ROUNDS="12"

# Environment
NODE_ENV="development"

# Email Configuration (for password reset, verification, etc.)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"
FROM_EMAIL="noreply@hikarichat.com"

# Payment Providers
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."
SQUARE_ACCESS_TOKEN="sandbox-sq0idb-..."
SQUARE_WEBHOOK_SECRET="your-square-webhook-secret"

# AI Providers
OPENAI_API_KEY="sk-..."
ANTHROPIC_API_KEY="sk-ant-..."

# Application Settings
APP_URL="http://localhost:5173"
APP_NAME="Hikari Chat"

# File Upload Settings
MAX_FILE_SIZE="10485760" # 10MB in bytes
UPLOAD_PATH="./uploads"
AWS_S3_BUCKET=""
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
AWS_REGION="us-west-2"

# Rate Limiting
RATE_LIMIT_REQUESTS="100"
RATE_LIMIT_WINDOW="3600" # 1 hour in seconds

# Session Settings
SESSION_DURATION="604800" # 7 days in seconds
REMEMBER_ME_DURATION="2592000" # 30 days in seconds